<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:background="@drawable/border_productsearch"
        android:id="@+id/llProductDetail"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


        <ImageView
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/tmbox100"
            />
            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="6dp"
                android:gravity="center"
                android:text="09/07/2022 10:40AM"
                android:textStyle="bold"
                android:textColor="@color/yellowsolf"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center"
                >
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="UserID:"
                    />
                <TextView
                    android:id="@+id/tvUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="12"
                    android:textColor="@color/blood"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Order Code:"
                />
                <TextView
                    android:id="@+id/tvOrderCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="13491239"
                    android:textColor="@color/blood"
                    android:padding="1dp"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Price:"
                    />
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1.300.000 VND"
                    android:textColor="@color/blood"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Number of Orders:"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="99"
                    android:id="@+id/tvProductCount"
                    android:textColor="@color/blood"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:src="@drawable/tmlocated48"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="Number of Orders:"
                    />
                <TextView
                    android:id="@+id/tvAddress"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Quận Đống Đa Hà Lội "

                    android:textColor="@color/blood"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:gravity="start"
                    />
            </LinearLayout>





        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>